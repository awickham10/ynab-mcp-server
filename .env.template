# YNAB OAuth Configuration
# You need to create an OAuth application at https://app.ynab.com/settings/developer

# Your YNAB OAuth application Client ID
YNAB_CLIENT_ID=your-ynab-client-id

# Your YNAB OAuth application Client Secret  
YNAB_CLIENT_SECRET=your-ynab-client-secret

# The base URL where your MCP server runs (for OAuth callbacks)
# This MUST match the Redirect URI configured in your YNAB OAuth app
# Redirect URI will be: {YNAB_BASE_URL}/oauth/callback
YNAB_BASE_URL=http://localhost:8000

# Whether to request read-only access (recommended)
YNAB_READ_ONLY=true